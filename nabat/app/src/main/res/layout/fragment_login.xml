<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.example.alex.nabat.FragmentLogin">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:paddingLeft="30dp"
            android:text="EMAIL" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/editLogin"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@android:drawable/editbox_background"
            android:inputType="textEmailAddress"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="ПАРОЛЬ"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:paddingLeft="30dp"
            android:id="@+id/editPassword"
            android:background="@android:drawable/editbox_background"
            android:inputType="textPassword"
            android:textColor="#000000" />

        <fragment
            android:id="@+id/fragmentFb"
            android:name="com.example.alex.nabat.FragmentFb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_fb" />

        <fragment
            android:id="@+id/fragmentVk"
            android:name="com.example.alex.nabat.FragmentVk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_vk" />

        <fragment
            android:id="@+id/fragmentNabat"
            android:name="com.example.alex.nabat.FragmentNabat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_nabat" />

        <Button
            android:id="@+id/callToast"
            android:text="CallToast"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>

</FrameLayout>
